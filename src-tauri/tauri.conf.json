{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Palette",
  "version": "0.1.0",
  "identifier": "com.dwlandry.claude-palette",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Claude Palette",
        "width": 320,
        "height": 600,
        "minWidth": 280,
        "minHeight": 400,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "resources": {
      "target/release/WebView2Loader.dll": "./"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}
